# VoiceClone Pre-Call Service Configuration

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_AGENT_ID=your-agent-id-here
ELEVENLABS_API_BASE=https://api.elevenlabs.io/v1

# Greeting Configuration (Async Voice Cloning)
GREETING_VOICE_ID=default_greeting_voice
GREETING_MESSAGE=Hello thanks for calling. Please hold while we prepare your personalized experience.
GREETING_MUSIC_ENABLED=true
GREETING_MUSIC_URL=https://your-domain.com/hold-music.mp3
CLONE_MAX_WAIT_SECONDS=35
AUTO_TRANSITION_ENABLED=true

# Database Configuration (Shared PostgreSQL Container)
# Connects to shared PostgreSQL container (service name: postgres)
# Database 'voice_clones' is dedicated to this service
DATABASE_URL=postgresql+asyncpg://voiceagent:your-password@postgres:5432/voice_clones
CACHE_TTL=86400

# Voice Clone Configuration
VOICE_CLONE_TIMEOUT=30
VOICE_SAMPLE_STORAGE=local
S3_BUCKET_NAME=voice-samples
S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
LOCAL_VOICE_SAMPLES_PATH=/data/voices

# Twilio Configuration (replaces 3CX)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/voiceclone/webhooks/inbound

# Testing Mode (set to true for local testing without real Twilio)
SKIP_WEBHOOK_SIGNATURE_VALIDATION=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security
WEBHOOK_SECRET=your-webhook-secret-here
CORS_ORIGINS=["*"]
