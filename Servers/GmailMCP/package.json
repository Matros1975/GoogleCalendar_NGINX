{
  "name": "@cocal/gmail-mcp",
  "version": "1.0.0",
  "description": "Gmail MCP Server with extensive support for email management",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "gmail-mcp": "build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "gmail",
    "email",
    "ai",
    "llm",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matros1975/GoogleCalendar_NGINX.git"
  },
  "bugs": {
    "url": "https://github.com/Matros1975/GoogleCalendar_NGINX/issues"
  },
  "homepage": "https://github.com/Matros1975/GoogleCalendar_NGINX#readme",
  "author": "Matros1975",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "node scripts/build.js",
    "auth": "node build/auth-server.js",
    "dev": "node scripts/dev.js",
    "lint": "tsc --noEmit -p tsconfig.lint.json",
    "test": "vitest run src/tests/unit",
    "test:watch": "vitest src/tests/unit",
    "test:integration": "vitest run src/tests/integration",
    "test:all": "vitest run src/tests",
    "test:coverage": "vitest run src/tests/unit --coverage",
    "start:http": "node build/index.js --transport http --port 3001",
    "start:http:public": "node build/index.js --transport http --port 3001 --host 0.0.0.0"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/mime-types": "^2.1.4",
    "esbuild": "^0.25.0",
    "google-auth-library": "^9.15.0",
    "googleapis": "^144.0.0",
    "mime-types": "^3.0.1",
    "nodemailer": "^7.0.3",
    "open": "^7.4.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.17",
    "@vitest/coverage-v8": "^3.1.1",
    "openai": "^4.104.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  }
}
